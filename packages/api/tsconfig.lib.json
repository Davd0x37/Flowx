{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "tsBuildInfoFile": "dist/tsconfig.lib.tsbuildinfo",
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "baseUrl": ".",
    "rootDir": "src",
    "outDir": "dist",
    "types": ["node", "vite/client"]
  },
  "references": [
    {
      "path": "../utils/tsconfig.lib.json"
    }
  ],
  "include": ["src/**/*.ts"],
  "exclude": [
    "vite.config.ts",
    "vitest.config.ts",
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/**/*.spec.ts",
    "src/**/*.spec.tsx"
  ]
}
