{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "incremental": false,

    // Paths
    "baseUrl": ".",
    "paths": {
      "app/*": ["app/*"],
      "features/*": ["app/features/*"],
      "ui/*": ["app/components/ui/*"]
    },

    // Unplugin-icons typings for react
    "types": ["unplugin-icons/types/react"]
  },
  "include": ["app"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
