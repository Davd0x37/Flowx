{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "jsx": "preserve",
    "lib": ["DOM", "DOM.Iterable", "ES2022"],

    // Paths
    "baseUrl": ".",
    "paths": {
      "app/*": ["./src/*"],
      "features/*": ["./src/features/*"],
      "ui/*": ["./src/components/ui/*"]
    },

    // Unplugin-icons typings for vue
    "types": ["unplugin-icons/types/vue"]
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
