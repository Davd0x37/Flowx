{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/apps/web",
    "types": [
      "vitest/globals",
      "vitest/importMeta",
      "vite/client",
      "node",
      "vitest",
      "@nx/react/typings/cssmodule.d.ts",
      "@nx/react/typings/image.d.ts",
      "unplugin-icons/types/react"
    ]
  },
  "include": [
    "vite.config.ts",
    "vitest.config.ts",
    "app/**/*.test.ts",
    "app/**/*.spec.ts",
    "app/**/*.test.tsx",
    "app/**/*.spec.tsx",
    "app/**/*.test.js",
    "app/**/*.spec.js",
    "app/**/*.test.jsx",
    "app/**/*.spec.jsx",
    "app/**/*.d.ts"
  ]
}
