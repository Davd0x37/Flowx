{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/apps/web",
    "baseUrl": ".",
    "paths": {
      "@/*": ["app/*"],
      "@features/*": ["app/features/*"],
      "@ui/*": ["app/components/ui/*"],
      "@flowx/api_types/*": ["../../packages/api_types/src/*"],
      "@flowx/shared/*": ["../../packages/shared/src/*"]
    },
    "types": [
      "node",
      "@nx/react/typings/cssmodule.d.ts",
      "@nx/react/typings/image.d.ts",
      "vite/client",
      "unplugin-icons/types/react"
    ]
  },
  "exclude": [
    "app/**/*.spec.ts",
    "app/**/*.test.ts",
    "app/**/*.spec.tsx",
    "app/**/*.test.tsx",
    "app/**/*.spec.js",
    "app/**/*.test.js",
    "app/**/*.spec.jsx",
    "app/**/*.test.jsx"
  ],
  "include": ["app/**/*.js", "app/**/*.jsx", "app/**/*.ts", "app/**/*.tsx"]
}
