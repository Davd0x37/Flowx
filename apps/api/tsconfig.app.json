{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "../../dist/apps/api",
    "paths": {
      "app/*": ["app/*"],
      "~/*": ["app/*"]
    }
  },
  "exclude": [
    "app/**/*.spec.ts",
    "app/**/*.test.ts",
    "app/**/*.spec.tsx",
    "app/**/*.test.tsx",
    "app/**/*.spec.js",
    "app/**/*.test.js",
    "app/**/*.spec.jsx",
    "app/**/*.test.jsx"
  ],
  "include": ["app/**/*.js", "app/**/*.jsx", "app/**/*.ts", "app/**/*.tsx"]
}
