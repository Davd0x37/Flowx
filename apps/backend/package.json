{
  "name": "@flowx/backend",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "dependencies": {
    "@fastify/cookie": "^11.0.2",
    "@fastify/cors": "^10.0.2",
    "@fastify/formbody": "^8.0.1",
    "@fastify/helmet": "^13.0.0",
    "@fastify/multipart": "^9.0.1",
    "@fastify/sensible": "^6.0.2",
    "@fastify/swagger": "9.4.0",
    "@fastify/swagger-ui": "5.2.0",
    "@fastify/under-pressure": "^9.0.2",
    "@node-rs/argon2": "^2.0.2",
    "@oslojs/crypto": "^1.0.1",
    "@oslojs/encoding": "^1.1.0",
    "@prisma/client": "6.2.1",
    "arctic": "^3.1.0",
    "fastify": "^5.2.1",
    "fastify-plugin": "^5.0.1",
    "fastify-type-provider-zod": "^4.0.2",
    "pino": "^9.6.0"
  },
  "devDependencies": {
    "@fastify/swagger": "^9.4.0",
    "@fastify/swagger-ui": "^5.2.0",
    "@types/zxcvbn": "^4.4.5",
    "pino-pretty": "^13.0.0",
    "prisma": "^6.2.1",
    "tsx": "^4.19.2"
  },
  "nx": {
    "name": "@flowx/backend",
    "projectType": "application",
    "sourceRoot": "apps/backend/src",
    "targets": {
      "serve": {
        "executor": "nx:run-commands",
        "options": {
          "cwd": "apps/backend",
          "command": "tsx src/server.ts",
          "parallel": false
        }
      },
      "watch": {
        "executor": "nx:run-commands",
        "options": {
          "cwd": "apps/backend",
          "command": "tsx watch src/server.ts",
          "parallel": false
        }
      },
      "lint": {
        "executor": "@nx/eslint:lint",
        "outputs": [
          "{options.outputFile}"
        ],
        "options": {
          "lintFilePatterns": [
            "apps/backend/**/*.ts"
          ]
        }
      },
      "prisma": {
        "command": "prisma",
        "options": {
          "cwd": "apps/backend"
        }
      },
      "generate-types": {
        "command": "prisma generate",
        "options": {
          "cwd": "apps/backend"
        }
      },
      "migrate": {
        "command": "prisma migrate dev",
        "options": {
          "cwd": "apps/backend"
        }
      }
    }
  },
  "prisma": {
    "schema": "src/db/schema.prisma"
  }
}
