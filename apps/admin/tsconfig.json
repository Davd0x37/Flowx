{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "jsx": "preserve",
    "jsxImportSource": "vue",
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "incremental": false,

    // Paths
    "baseUrl": ".",
    "paths": {
      "app/*": ["./app/*"],
      "features/*": ["./app/features/*"],
      "ui/*": ["./app/components/ui/*"]
    },

    // Unplugin-icons typings for vue
    "types": ["unplugin-icons/types/vue"]
  },
  "include": ["app"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
