{
  "name": "flowx",
  "version": "0.0.5",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@9.8.0",
  "scripts": {
    "build:api": "nx build @flowx/api",
    "watch:api": "nx run @flowx/api:watch",
    "serve:api": "nx serve @flowx/api",
    "build:web": "nx build @flowx/web",
    "serve:web": "nx serve @flowx/web",
    "build:all": "nx run-many -t build",
    "test": "nx run-many -t test --parallel",
    "lint": "nx run-many -t lint --parallel",
    "type-check": "nx run-many -t type-check --parallel",
    "format": "prettier --write \"{apps,packages}/**/*.{ts,tsx,html,css,scss,json,md}\"",
    "docker:web:up": "pnpm exec docker-compose -f web.docker-compose.yaml --env-file .start.env up",
    "pre-commit": "lint-staged",
    "prepare": "husky"
  },
  "devDependencies": {
    "@nx/esbuild": "^19.6.4",
    "@nx/eslint": "19.6.4",
    "@nx/js": "19.6.4",
    "@nx/node": "19.6.4",
    "@nx/react": "19.6.4",
    "@nx/vite": "19.6.4",
    "@nx/web": "19.6.4",
    "@nx/workspace": "19.6.4",
    "@swc-node/register": "~1.10.9",
    "@swc/core": "~1.7.22",
    "@swc/helpers": "~0.5.11",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/eslint": "^9.6.1",
    "@types/node": "^22.5.1",
    "@vitejs/plugin-react-swc": "^3.7.0",
    "@vitest/ui": "^2.0.5",
    "esbuild": "^0.23.1",
    "eslint": "^9.9.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^17.10.2",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-promise": "^7.1.0",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.11",
    "globals": "^15.9.0",
    "husky": "^9.1.5",
    "lint-staged": "^15.2.9",
    "nx": "^19.6.4",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.6",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.3.0",
    "vite": "^5.4.2",
    "vite-node": "^2.0.5",
    "vitest": "^2.0.5"
  },
  "lint-staged": {
    "./{apps,packages}/**/*.{js,ts,tsx}": [
      "prettier --config prettier.config.js --write \"./{apps,packages}/**/*.{ts,tsx,html,css,scss,json,md}\"",
      "nx run-many -t lint",
      "nx run-many -t type-check"
    ]
  },
  "dependencies": {
    "@monodon/rust": "2.0.0-beta.1",
    "react": "18.3.1",
    "react-dom": "18.3.1"
  }
}
