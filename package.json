{
  "name": "flowx",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build:all": "nx run-many -t build",
    "build:backend": "nx build @flowx/backend",
    "build:frontend": "nx build @flowx/frontend",
    "docker:backend:up": "pnpm exec docker-compose --env-file .env up backend",
    "docker:frontend:up": "pnpm exec docker-compose --env-file .env up frontend",
    "format": "prettier . --write",
    "lint": "nx run-many -t lint --parallel",
    "lint:fix": "nx run-many -t lint --parallel --fix",
    "make-me-nervous": "pnpm run format && pnpm run lint:fix && pnpm run typecheck && pnpm run test",
    "pre-commit": "lint-staged",
    "prepare": "husky",
    "serve:backend": "nx serve @flowx/backend",
    "serve:frontend": "nx serve @flowx/frontend",
    "test": "nx run-many -t test --parallel",
    "typecheck": "nx run-many -t typecheck --parallel"
  },
  "lint-staged": {
    "./{apps,packages}/**/*.{ts,tsx}": [
      "prettier . --write",
      "nx run-many -t lint",
      "nx run-many -t typecheck"
    ]
  },
  "dependencies": {
    "@flowx/api": "workspace:*",
    "@flowx/utils": "workspace:*",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@eslint-react/eslint-plugin": "^1.23.2",
    "@nx/eslint": "20.3.1",
    "@nx/eslint-plugin": "20.3.1",
    "@nx/js": "20.3.1",
    "@nx/node": "20.3.1",
    "@nx/react": "20.3.1",
    "@nx/vite": "20.3.1",
    "@nx/web": "20.3.1",
    "@nx/workspace": "20.3.1",
    "@swc-node/register": "~1.10.9",
    "@swc/core": "~1.10.6",
    "@swc/helpers": "~0.5.11",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/node": "^22.10.5",
    "@vitejs/plugin-react-swc": "^3.7.2",
    "@vitest/coverage-v8": "^2.1.8",
    "@vitest/ui": "^2.1.8",
    "eslint": "^9.17.0",
    "eslint-plugin-format": "^1.0.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-perfectionist": "^4.5.0",
    "eslint-plugin-react": "^7.37.3",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "globals": "^15.14.0",
    "husky": "^9.1.7",
    "jsdom": "~25.0.1",
    "jsonc-eslint-parser": "^2.4.0",
    "lint-staged": "^15.3.0",
    "msw": "^2.7.0",
    "nx": "20.3.1",
    "prettier": "^3.4.2",
    "prettier-plugin-packagejson": "^2.5.6",
    "prettier-plugin-sh": "^0.14.0",
    "react-refresh": "~0.16.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.19.1",
    "vite": "^6.0.7",
    "vite-plugin-dts": "~4.4.0",
    "vitest": "^3.0.0-beta.3"
  },
  "packageManager": "pnpm@9.15.2"
}
