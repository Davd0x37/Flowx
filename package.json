{
  "name": "flowx",
  "version": "0.0.2",
  "packageManager": "pnpm@8.12.1",
  "private": true,
  "type": "module",
  "scripts": {
    "lint": "pnpm run -r lint",
    "lint:fix": "pnpm lint --fix",
    "format": "prettier --write \"**/*.{cjs,js,ts,tsx,html,css,scss,json,yml,yaml,md}\"",
    "api:run": "pnpm --filter api",
    "web:run": "pnpm --filter web",
    "shared:run": "pnpm --filter @flowx/shared",
    "api:dev": "pnpm api:run dev",
    "api:dev:ts-node": "pnpm api:run dev:ts-node",
    "web:dev": "pnpm web:run dev",
    "web:build": "pnpm web:run build",
    "shared:build": "pnpm shared:run build",
    "shared:dev": "pnpm shared:run dev",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "configure-husky": "pnpx husky install && husky add .husky/pre-commit \"pnpx lint-staged\""
  },
  "devDependencies": {
    "@graphql-eslint/eslint-plugin": "^3.20.1",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/eslint": "^8.56.7",
    "@vitest/ui": "^1.4.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^17.0.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "globals": "^15.0.0",
    "graphql": "^16.8.1",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.13",
    "typescript": "^5.4.4",
    "typescript-eslint": "^7.6.0",
    "vite": "^5.2.8",
    "vitest": "^1.4.0"
  },
  "lint-staged": {
    "**/*.{js,json,tsx}": [
      "eslint . --fix",
      "prettier --config prettier.config.js --write \"**/*.{ts,tsx,html,scss,json,yml,md}\""
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
