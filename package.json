{
  "name": "flowx",
  "version": "0.0.3",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "nx run-many -t build",
    "test": "nx run-many -t test --parallel",
    "lint": "nx run-many -t lint --parallel",
    "format": "prettier --write \"**/*.{ts,tsx,html,css,scss,json,md}\"",
    "configure-husky": "pnpx husky install && husky add .husky/pre-commit \"pnpx lint-staged\""
  },
  "devDependencies": {
    "@nx/eslint": "19.1.0",
    "@nx/vite": "19.1.0",
    "@nx/web": "19.1.0",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/eslint": "^8.56.10",
    "eslint": "^9.3.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^17.7.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.2",
    "globals": "^15.3.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.5",
    "nx": "^19.1.0",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.14",
    "typescript": "^5.4.5",
    "typescript-eslint": "^7.10.0"
  },
  "lint-staged": {
    "**/*.{js,json,tsx}": [
      "eslint . --fix",
      "prettier --config prettier.config.js --write \"**/*.{ts,tsx,html,css,scss,json,md}\""
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
